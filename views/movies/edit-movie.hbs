<div>

  <h2>Edit Movie</h2>

  <form action="/movies/{{this.movieToEdit._id}}/edit" method="post">

    <label for="title">Title</label>
    <input type="text" name="title" value="{{this.movieToEdit.title}}">

    <label for="genre">Genre</label>
    <input type="text" name="genre" value="{{this.movieToEdit.genre}}">

    <label for="plot">Plot</label>
    <input type="text" name="plot" value="{{this.movieToEdit.plot}}">

    <label for="cast">Cast</label>
    <select name="cast" multiple>
      
      <option value="{{this.movieToEdit._id}}" selected>{{this.movieToEdit.cast.name}}</option>

      <option disabled>-----------------------------</option>

      {{#each this.allCelebrities}}

      <option value="{{this._id}}">{{this.name}}</option>

      {{/each}}

    </select>

    <button>Update movie</button>

  </form>
  
</div>